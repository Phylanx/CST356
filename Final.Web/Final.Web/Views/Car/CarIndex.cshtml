@model IEnumerable<Final.Web.Models.Entities.CarModel>

@{
    ViewBag.Title = "Garage";
}

<h2>Cars</h2>

<p>
    @Html.ActionLink("New Car", "CarCreate")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Make)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Model)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Color)
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Make)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Model)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Color)
        </td>
        <td>
            @Html.ActionLink("Edit", "CarUpdate", new { id = item.Id }) |
            @Html.ActionLink("Details", "CarInfo", new { id = item.Id }) |
            @Html.ActionLink("Remove", "CarDelete", new { id = item.Id })
        </td>
    </tr>
}

</table>
